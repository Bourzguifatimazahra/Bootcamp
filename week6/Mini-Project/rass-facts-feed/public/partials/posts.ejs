<div class="container mt-4">
    <h2 class="mb-4"><%= title %></h2>
    
    <% if (posts.length === 0) { %>
        <div class="alert alert-info">No posts found.</div>
    <% } else { %>
        <% posts.forEach(post => { %>
            <div class="post-card bg-light">
                <h4>
                    <a href="<%= post.link %>" target="_blank" class="text-decoration-none">
                        <%= post.title %>
                    </a>
                </h4>
                <p class="text-muted">
                    Published: <%= new Date(post.pubDate).toLocaleDateString() %> | 
                    Creator: <%= post.creator || 'Unknown' %>
                </p>
                <% if (post.categories && post.categories.length > 0) { %>
                    <div class="mb-2">
                        Categories: 
                        <% post.categories.forEach(cat => { %>
                            <span class="badge bg-secondary me-1"><%= cat %></span>
                        <% }) %>
                    </div>
                <% } %>
                <div class="post-content">
                    <%= post.content %>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>